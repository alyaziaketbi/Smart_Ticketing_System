@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    var role = Accessor.HttpContext?.Session.GetString("u:role");
    string homeHref = role switch
    {
        "HelpDesk" => Url.Page("/HelpDesk/Index"),
        "Support" => Url.Page("/Support/Index"),
        "Requester" => Url.Page("/Requester/Index"),
        _ => Url.Page("/Login")
    };

    var isLoggedIn = Accessor.HttpContext?.Session.GetInt32("u:id") != null;
}

@functions {
    // Choose role-based badge color
    public static string GetRoleBadgeClass(string role) => role switch
    {
        "HelpDesk" => "bg-warning text-dark",
        "Support" => "bg-success",
        "Requester" or "User" => "bg-primary",
        _ => "bg-secondary"
    };

    // Choose background for initials circle
    public static string GetAvatarColor(string role) => role switch
    {
        "HelpDesk" => "#f8d7e2", // light pink circle background
        "Support" => "#d1e7dd",  // light green
        "Requester" or "User" => "#cfe2ff", // light blue
        _ => "#e9ecef" // neutral grey
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Ticketing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartTicketingManagementApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Brand goes to role home -->
                <a class="navbar-brand" href="@homeHref">Smart Ticketing</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@homeHref">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    @if (isLoggedIn)
                    {
                        
                            var name = Context.Session.GetString("UserName");
                        var userRole = Context.Session.GetString("UserRole");
                            var initials = !string.IsNullOrWhiteSpace(name)
                            ? string.Join("", name.Split(' ').Select(n => n[0])).ToUpper()
                            : "U";
                         

                        <div class="d-flex align-items-center gap-3">
                            <!-- User info -->
                            <div class="d-flex align-items-center gap-2">
                                <!-- Circle initials -->
                                <div class="rounded-circle text-center fw-bold text-white"
                                     style="width:38px;height:38px;line-height:38px;
                                         background-color:@GetAvatarColor(userRole);">
                                    @initials
                                </div>

                                <!-- Name + Role -->
                                <div class="text-start">
                                    <div class="fw-semibold">@name</div>
                                    <span class="badge role-badge @userRole.ToLower()">@userRole</span>
                                </div>
                            </div>

                            <!-- Logout Button -->
                            <form method="post" asp-page="/Login" asp-page-handler="Logout" class="d-flex mb-0">
                                <button type="submit" class="btn btn-outline-dark d-flex align-items-center gap-2 px-3 py-1 rounded-3 logout-btn">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Smart Ticketing - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>
    .role-badge {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.35em 0.65em;
        border-radius: 0.5rem;
    }

        .role-badge.user, .role-badge.requester {
            background-color: #0d6efd; /* blue */
            color: white;
        }

        .role-badge.helpdesk {
            background-color: #f06292; /* pink */
            color: #000; /* black text for contrast */
        }

        .role-badge.support {
            background-color: #198754; /* green */
            color: white;
        }
</style>