@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    var role = Accessor.HttpContext?.Session.GetString("u:role");
    string homeHref = role switch
    {
        "HelpDesk" => Url.Page("/HelpDesk/Index"),
        "Support" => Url.Page("/Support/Index"),
        "Requester" => Url.Page("/Requester/Index"),
        _ => Url.Page("/Login")
    };

    var isLoggedIn = Accessor.HttpContext?.Session.GetInt32("u:id") != null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Ticketing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartTicketingManagementApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Brand goes to role home -->
                <a class="navbar-brand" href="@homeHref">Smart Ticketing</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@homeHref">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    @if (isLoggedIn)
                    {
                        <form method="post" asp-page="/Login" asp-page-handler="Logout" class="d-flex mb-0">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Smart Ticketing - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>